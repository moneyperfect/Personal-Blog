{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "installCommand": "npm install && git submodule update --init --recursive",
  "build": {
    "env": {
      "OBSIDIAN_NOTES_PATH": "./obsidian-notes"
    }
  },
  "env": {
    "NEXT_PUBLIC_SITE_URL": "@site_url"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}